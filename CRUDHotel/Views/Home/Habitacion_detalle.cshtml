@model CRUDHotel.Models.ViewModels.HabitacionVM
@{
    ViewData["Title"] = "Habitacion_detalle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if(Model.oHabitacion.NumeroHabitacion == 0)
{
    <h1>Crear Habitacion</h1>
} else {
    <h1>Editar Habitacion</h1>
}

<div class="row">
    <div class="col-sm-4">
        <form asp-action="Habitacion_detalle" asp-controller="Home" method="post">
            
            <div class="mb-2">
                <label class="form-label" asp-for="oHabitacion.NumeroHabitacion">Numero de habitacion</label>
                <input class="form-control form-control-sm" asp-for="oHabitacion.NumeroHabitacion" type="number" />
                <label class="form-label" asp-for="oHabitacion.Fotos">Link de las fotos</label>
                <input class="form-control form-control-sm" asp-for="oHabitacion.Fotos" type="text" />
                <label class="form-label" asp-for="oHabitacion.Descripcion">Descripcion</label>
                <input class="form-control form-control-sm" asp-for="oHabitacion.Descripcion" type="text" />
                <label class="form-label" asp-for="oHabitacion.Precio">Precio</label>
                <input class="form-control form-control-sm" asp-for="oHabitacion.Precio" type="number" />
                <label class="form-label" asp-for="oHabitacion.NumeroCamas">Numero de camas</label>
                <input class="form-control form-control-sm" asp-for="oHabitacion.NumeroCamas" type="number" />
                <label class="form-label" asp-for="oHabitacion.Suite">Es suite?</label>
                <input class="form-control form-control-sm" asp-for="oHabitacion.Suite" type="checkbox" value="Si"/>
            </div>

            <div class="mb-2">
                @if (Model.oHabitacion.NumeroHabitacion == 0)
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Crear</button>
                }
                else
                {
                    <button class="btn btn-primary btn-sm w-25" type="submit">Actualizar</button>
                }
                <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Home" asp-route-NumeroHabitacion="0">Volver</a>

            </div>


        </form>
    </div>
</div>